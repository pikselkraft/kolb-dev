<html>
    <head>
        <meta charset="utf-8">
        <title>jQuery Validation Plugin Examples</title>

        <!-- Bootstrap CSS used for styling the demo pages-->
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
    </head>

    <body>
        <!-- Advanced rules -->
        <form class="form" id="example3">
            <div class="form-group">
                <label>Advanced rules</label>
            </div>
            <div class="form-group" id="errors2">
            </div>
            <div class="form-group">
                <label for="example3-field1">Field 1 - must be equal to Field 2 value</label>
                <input type="text" class="form-control" id="example3-field1" name="example3-field1">
            </div>
            <div class="form-group">
                <label for="example3-field2">Field 2</label>
                <input type="text" class="form-control" id="example3-field2" name="example3-field2">
            </div>
            <div class="form-group">
                <label for="example3-input1">Input 1 - Validate against a custom function</label>
                <input type="text" class="form-control" id="example3-input1" name="example3-input1">
            </div>
            <div class="form-group">
                <label>At least two options must be checked</label>
                <br />
                <input type="checkbox" name="example3-check" id="example3-check1" value="1"> &nbsp;<label for="example3-check1" class="text-normal">First option</label>
                &nbsp; &nbsp; 
                <input type="checkbox" name="example3-check" id="example3-check2" value="2"> &nbsp;<label for="example3-check2" class="text-normal">Second option</label>
                &nbsp; &nbsp; 
                <input type="checkbox" name="example3-check" id="example3-check3" value="3"> &nbsp;<label for="example3-check3" class="text-normal">Third option</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <!-- Load jQuery and jQuery-Validate scripts -->
        <script src="js/jquery.js"></script>
        <script src="js/jquery-validate.js"></script>
        <script>
            // When the document is ready
            $(document).ready(function () {
                
                //validation rules
                $("#example3").validate({
                    onkeyup: false,
                    onfocusout: false,
                    errorElement: "div",
                    errorPlacement: function(error, element) {
                        error.appendTo("div#errors2");
                    }, 
                    rules: {
                        "example3-field1" : {
                            required : true,
                            equalTo: "#example3-field2"
                        },
                        "example3-input1" : "customFunction",
                        "example3-check": {
                            required : true,
                            minlength: 2
                        }
                    },
                    messages: {
                        "example3-field1": {
                            required: "You must enter a Field 1 value",
                            equalTo: "Field 1 must be equal to Field 2"
                        },  
                        "example3-check": {
                            required: "You must choose some options",
                            minlength: "You must choose at least 2 options"
                        } 
                    }
                });
                $.validator.addMethod("customFunction", function(value) {
                    return value == "input";
                }, 'Please enter "input"!'); 
                
            });
        </script>
    </body>
</html>
